{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "CMake build",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-G",
                "MinGW Makefiles",
                "-B",
                "${workspaceFolder}/${relativeFileDirname}/../build",
                "-S",
                "${workspaceFolder}/${relativeFileDirname}/..",
                ";",
                "mingw32-make",
                "-C",
                "${workspaceFolder}/${relativeFileDirname}/../build"
            ],
            "group": "build"
        },
    ]
}